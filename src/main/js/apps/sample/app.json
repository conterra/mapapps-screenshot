{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "console",
            "system",
            "banner",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-autumn",
            "toolset",
            "map-init",
            "map-preload-2D",
            "mapnavigation",
            "toc",
            "basemaptoggler",
            "viewmodeswitcher",
            "dn_screenshot",
            "dn_imprintprivacy"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_screenshot": {
            "Config": {
                "format": "jpg"
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://developernetwork.conterra.de"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "basemap": "streets",
                        "title": "Strassen",
                        "selected": true
                    },
                    {
                        "id": "satellite",
                        "basemap": "satellite",
                        "title": "Satellit"
                    },
                    {
                        "id": "hybrid",
                        "basemap": "hybrid",
                        "title": "Hybrid"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "title": "Gemeinden",
                            "type": "AGS_FEATURE",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/grenzen/FeatureServer/0",
                            "definitionExpression": "kgs8 LIKE '05515%'"
                        },
                        {
                            "title": "Kreise",
                            "type": "AGS_FEATURE",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/grenzen/FeatureServer/1",
                            "definitionExpression": "land_nr = 5"
                        },
                        {
                            "title": "Bundeslaender",
                            "type": "AGS_FEATURE",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/grenzen/FeatureServer/2"
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool",
                            "viewmodeSwitcherTool",
                            "screenshotTool",
                            "screenshotToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        }
    }
}
