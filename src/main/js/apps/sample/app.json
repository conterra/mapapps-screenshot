{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system@^4.6.0",
            "splashscreen@^4.6.0",
            "templatelayout@^4.6.0",
            "template-seasons@^4.6.0",
            "theme-everlasting@^4.6.0",
            "toolset@^4.6.0",
            "map-init@^4.6.0",
            "agssearch@^4.6.0",
            "console",
            "viewmodeswitcher",
            "dn_screenshot",
            "mapdraw-api"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_screenshot": {
            "Config": {
                "format": "jpg"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [{
                    "id": "streets",
                    "basemap": "streets",
                    "title": "Strassen",
                    "selected": true
                },{
                    "id": "satellite",
                    "basemap": "satellite",
                    "title": "Satellit"
                },{
                    "id": "hybrid",
                    "basemap": "hybrid",
                    "title": "Hybrid"
                }],
                "map": {
                    "layers": [
                        {
                            "title": "Gemeinden",
                            "type": "AGS_FEATURE",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/grenzen/FeatureServer/0",
                            "definitionExpression": "kgs8 LIKE '05515%'"
                        },
                        {
                            "title": "Kreise",
                            "type": "AGS_FEATURE",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/grenzen/FeatureServer/1",
                            "definitionExpression": "land_nr = 5"
                        },
                        {
                            "title": "Bundeslaender",
                            "type": "AGS_FEATURE",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/grenzen/FeatureServer/2"
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "defaultToolSet",
                        "tools": ["screenshotTool","screenshotToggleTool","viewmodeSwitcherTool"],
                        "registerWidget": {
                            "widgetRole": "map_topleft"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        }
    }
}
