{
    "name": "dn_screenshot",
    "version": "1.0.4-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-screenshot",
    "dependencies": {
        "esri": "^4.6.0",
        "apprt-vue": "^4.6.0",
        "apprt-vuetify": "^4.6.0",
        "map-actions": "^4.6.0",
        "mapdraw-api": "^4.6.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "styles/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "screenshotWidget",
            "window": {
                "title": "${ui.windowTitle}",
                "autofocus": false,
                "dockTool": "screenshotToggleTool",
                "minimizeOnClose": true,
                "marginBox": {
                    "l": 20,
                    "t": 125,
                    "w": 320,
                    "h": 450
                },
                "minSize": {
                    "h": 425
                }
            }
        },
        {
            "widgetRole": "screenshotWidget",
            "sublayout": [
                "mobile_portrait"
            ],
            "window": {
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "w": "100%",
                    "h": "50%",
                    "b": 0
                }
            }
        },
        {
            "widgetRole": "screenshotWidget",
            "sublayout": [
                "mobile_landscape"
            ],
            "window": {
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "w": "50%",
                    "h": "100%",
                    "l": 0
                }
            }
        }
    ],
    "components": [
        {
            "name": "ScreenshotControl",
            "provides": "dn_screenshot.ScreenshotControl",
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_appCtx",
                    "providing": "ct.framework.api.ApplicationContext"
                },
                {
                    "name": "_actionService",
                    "providing": "map-actions.ActionService"
                },
                {
                    "name": "_config",
                    "providing": "dn_screenshot.Config"
                }
            ]
        },
        {
            "name": "DirectScreenshotTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "screenshotTool",
                "title": "${directScreenshotTool.title}",
                "tooltip": "${directScreenshotTool.tooltip}",
                "iconClass": "icon-doc-image-landscape",
                "toolRole": "toolset",
                "togglable": false,
                "rules": {
                    "noGroup": true
                },
                "clickHandler": "takeScreenshot"
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_screenshot.ScreenshotControl"
                },
                {
                    "name": "config",
                    "providing": "dn_screenshot.Config"
                }
            ]
        },
        {
            "name": "ScreenshotToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "screenshotToggleTool",
                "title": "${screenshotToggleTool.title}",
                "tooltip": "${screenshotToggleTool.tooltip}",
                "iconClass": "icon-doc-image-landscape",
                "toolRole": "toolset",
                "togglable": true,
                "rules": {
                    "noGroup": true
                },
                "activateHandler": "enableBinding",
                "deactivateHandler": "disableBinding"
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_screenshot.Widget"
                }
            ]
        },
        {
            "name": "ScreenshotUIFactory",
            "provides": [
                "dijit.Widget",
                "dn_screenshot.Widget"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "screenshotWidget"
            },
            "references": [
                {
                    "name": "_basemapsModel",
                    "providing": "map-basemaps-api.BasemapsModel"
                },
                {
                    "name": "_screenshotControl",
                    "providing": "dn_screenshot.ScreenshotControl"
                },
                {
                    "name": "_config",
                    "providing": "dn_screenshot.Config"
                }
            ]
        },
        {
            "name": "Config",
            "provides": "dn_screenshot.Config",
            "properties": {
                "-ignoreBackground": false,
                "-quality": 98,
                "-format": "png"
            },
            "propertiesConstructor": true
        }
    ]
}
